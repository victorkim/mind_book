<p style="color: green"><%= notice %></p>

<h1>Channels</h1>

<!-- Add Filter Toggle -->
<div class="filter-toggle" style="margin: 20px 0; text-align: center;">
  <%= link_to "All Channels", channels_path, 
      class: "btn #{params[:filter].nil? ? 'btn-primary' : 'btn-secondary'}", 
      style: "margin: 0 5px;" %>
  <%= link_to "Demo Only", channels_path(filter: 'demo'), 
      class: "btn #{params[:filter] == 'demo' ? 'btn-primary' : 'btn-secondary'}", 
      style: "margin: 0 5px;" %>
  <%= link_to "Real Only", channels_path(filter: 'real'), 
      class: "btn #{params[:filter] == 'real' ? 'btn-primary' : 'btn-secondary'}", 
      style: "margin: 0 5px;" %>
</div>

<div id="channels" class="channels-grid">
  <% @channels.each do |channel| %>
    <%= render channel %>
  <% end %>
</div>

<%= link_to "New channel", new_channel_path %>
