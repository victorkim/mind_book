<%= turbo_frame_tag "edit_comment_modal" do %>
  <div class="modal" data-controller="modal" data-modal-target="modal">
    <h1 class="comment-modal-title">
      Edit this comment
    </h1> 
    <%= form_with(model: [@project, @comment], local: true) do |form| %>
      <% if @comment.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
          <ul>
            <% @comment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form.rich_text_area :body, rows: 3 %>  
      <div class="edit-comment-actions">
        <%= form.submit "Submit", form_class: "inline-form", class: "button" %>
        <%= link_to "Cancel", "#", data: { action: "modal#close" }, form_class: "inline-form", class: "button" %>      
      </div>
    <% end %>
  </div>
<% end %>