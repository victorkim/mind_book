<div id="comment_<%= comment.id %>_list">
  <% if comment.user %>
    <strong><%= comment.user.name %></strong>: <span class="comment-body"><%= raw comment.body.to_s %></span>
  <% else %>
    <strong>Anonymous</strong>: <span class="comment-body"><%= raw comment.body.to_s %></span>
  <% end %>

  <div>
    <% if comment.persisted? %>
      <strong><%= link_to 'Edit', edit_project_comment_path(comment.project, comment), data: { turbo_frame: "edit_comment_modal" } %> | </strong>
      <strong><%= button_to 'Delete', [comment.project, comment], method: :delete, data: { confirm: 'Are you sure?' } %></strong>
    <% end %>
  </div>
</div>
